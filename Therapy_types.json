<!DOCTYPE html>
<html>
<head>
    <style>
        .container {
            max-width: 800px;
            margin: 20px auto;
            font-family: Arial, sans-serif;
        }
        
        select {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 2px solid #4a90e2;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }
        
        .info-box {
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 4px;
            background-color: #f9f9f9;
            display: none;
        }
        
        .info-box.active {
            display: block;
            animation: fadeIn 0.3s ease-in;
        }
        
        h3 {
            color: #2c3e50;
            margin-top: 0;
        }
        
        .section {
            margin-bottom: 15px;
        }
        
        .section-title {
            font-weight: bold;
            color: #4a90e2;
            margin-bottom: 5px;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
</head>
<body>
    <div class="container">
        <select id="therapySelect">
            <option value="">Select a Type of Therapy...</option>
        </select>
        <div id="infoContainer"></div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const therapies = [
                {
                    "id": "art",
                    "name": "Art Therapy",
                    "description": "Art therapy uses creative expression as a therapeutic tool to promote emotional and mental well-being.",
                    "applications": [
                        "Emotional expression",
                        "Trauma processing",
                        "Anxiety and depression",
                        "Child therapy",
                        "Stress reduction"
                    ]
                },
                {
                    "id": "cbt",
                    "name": "Cognitive Behavioral Therapy (CBT)",
                    "description": "CBT is a structured, goal-oriented therapy that focuses on the relationship between thoughts, feelings, and behaviors. It helps individuals identify and change negative thought patterns and behaviors.",
                    "applications": [
                        "Depression and anxiety disorders",
                        "Phobias and panic disorders",
                        "Post-traumatic stress disorder (PTSD)",
                        "Eating disorders",
                        "Sleep disorders"
                    ]
                },
                {
                    "id": "ecotherapy",
                    "name": "Ecotherapy",
                    "description": "Ecotherapy involves exposure to and activities in nature to improve mental health. It emphasizes the connection between humans and the environment.",
                    "applications": [
                        "Stress and anxiety reduction",
                        "Depression management",
                        "Improved well-being",
                        "Enhanced mindfulness and connection to nature"
                    ]
                },
                {
                    "id": "family",
                    "name": "Family Therapy",
                    "description": "Family therapy focuses on improving communication and resolving conflicts within the family unit.",
                    "applications": [
                        "Family conflicts",
                        "Child and adolescent issues",
                        "Marriage problems",
                        "Behavioral problems",
                        "Communication issues"
                    ]
                },
                {
                    "id": "humanistic",
                    "name": "Humanistic Therapy",
                    "description": "Humanistic therapy emphasizes personal growth and self-actualization. It focuses on the present moment and helps individuals develop a stronger sense of self.",
                    "applications": [
                        "Self-esteem issues",
                        "Personal growth",
                        "Relationship difficulties",
                        "Life transitions",
                        "Existential concerns"
                    ]
                },
                {
                    "id": "hypnotherapy",
                    "name": "Hypnotherapy",
                    "description": "Hypnotherapy uses guided relaxation, concentration, and focused attention to achieve a heightened state of awareness (hypnosis). It is often used to help change habits or alleviate stress.",
                    "applications": [
                        "Smoking cessation",
                        "Weight management",
                        "Anxiety and phobias",
                        "Pain management",
                        "Stress reduction"
                    ]
                },
                {
                    "id": "music",
                    "name": "Music Therapy",
                    "description": "Music therapy uses music interventions to address emotional, cognitive, and social needs of individuals.",
                    "applications": [
                        "Stress management",
                        "Improved communication",
                        "Emotional expression",
                        "Physical rehabilitation",
                        "Enhancing memory in dementia"
                    ]
                },
                {
                    "id": "psychodynamic",
                    "name": "Psychodynamic Therapy",
                    "description": "Psychodynamic therapy focuses on unconscious processes and past experiences that influence current behavior. It helps individuals gain insight into their emotional patterns and relationships.",
                    "applications": [
                        "Depression and anxiety",
                        "Relationship issues",
                        "Personal growth and self-understanding",
                        "Long-standing emotional difficulties",
                        "Identity issues"
                    ]
                },
                {
                    "id": "somatic",
                    "name": "Somatic Experiencing",
                    "description": "Somatic experiencing focuses on the connection between the mind and body. It helps individuals process trauma through physical sensations and awareness.",
                    "applications": [
                        "Trauma and PTSD",
                        "Stress and anxiety",
                        "Chronic pain",
                        "Emotional regulation",
                        "Improved self-awareness"
                    ]
                } 
            ];

            therapies.sort((a, b) => a.name.localeCompare(b.name));

            const selectElement = document.getElementById("therapySelect");
            const infoContainer = document.getElementById("infoContainer");

            // Populate dropdown
            therapies.forEach(therapy => {
                const option = document.createElement("option");
                option.value = therapy.id;
                option.textContent = therapy.name;
                selectElement.appendChild(option);
            });

            // Handle dropdown change
            selectElement.addEventListener("change", () => {
                const selectedTherapy = therapies.find(t => t.id === selectElement.value);
                if (selectedTherapy) {
                    // Populate info container
                    infoContainer.innerHTML = `
                        <div class="info-box active">
                            <h3>${selectedTherapy.name}</h3>
                            <div class="section">
                                <div class="section-title">Description:</div>
                                <p>${selectedTherapy.description}</p>
                            </div>
                            <div class="section">
                                <div class="section-title">Applications:</div>
                                <p>${selectedTherapy.applications.map(app => `- ${app}`).join("<br>")}</p>
                            </div>
                        </div>
                    `;
                } else {
                    infoContainer.innerHTML = ""; // Clear if no selection
                }
            });
        });
    </script>
</body>
</html>
